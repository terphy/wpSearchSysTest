/* pages/list/company.wxss */
@import '/src/css/weui.wxss';
/* 导航栏样式 */
.nav {
  display: flex;
  background-color: #1184E1;
}
.nav>view {
  height: 40px;
}
.nav-left,.nav-right {
  width:20%;
}
.nav-left {
  padding-top:5px;
}
.nav-left image {
  width:100%;
  height: 20px;
}
.nav-right {
  position: relative;
}
.nav-right image{
  position: absolute;
  width:30px;
  height: 30px;
  top:0;
  left:0;
  right: 0;
  bottom: 0;
  margin:auto;
}
.nav-middle {
  width: 60%;
}

/* 选择栏  */
.select {
  display: flex;
  font-size: 14px;
  background-color: #EFEFF4;
}
.select>view {
  text-align: center;
  width:25%;
  height: 40px;
  line-height: 40px;
}

.active {
  color:blue;
}
.category {
  position: relative;
}
.selectitem-piker {
  position: absolute;
  top:0;
}
/* 列表 */
page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    padding-top: 60px;
    text-align: center;
}
.placeholder{
    margin: 5px;
    padding: 0 10px;
    text-align: center;
    background-color: #EBEBEB;
    height: 2.3em;
    line-height: 2.3em;
    color: #26c092;
}